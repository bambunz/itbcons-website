<%- include('partials/header') %>

<section class="hero services-hero">
    <div class="hero-content">
        <h1>Explore Our Comprehensive Services</h1>
        <p>Expert solutions meticulously tailored to address your unique technology and security challenges.</p>
        <a href="/contact" class="button">Request a Consultation</a>
    </div>
</section>

<section class="services-showcase content-section">
    <div class="feature-grid">
        <% servicesList.forEach(service => { %>
            <div class="feature-item service-page-item"> <img src="<%= service.image %>" alt="<%= service.name %>" class="service-item-image">
                <h3><%= service.name %></h3>
                <p><%= service.shortDescription %></p>
                <a href="/services/<%= service.id %>" class="button button-small">Learn More</a>
            </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>

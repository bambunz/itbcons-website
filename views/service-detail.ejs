<%- include('partials/header') %>

<section class="content-section service-detail-page">
    <div class="service-header">
        <img src="<%= service.image %>" alt="<%= service.name %> Service" class="service-main-image">
        <h1><%= service.name %></h1>
        <p class="service-short-description"><%= service.shortDescription %></p>
    </div>

    <div class="service-content">
        <h2><%= service.details.heading1 %></h2>
        <p><%- service.details.paragraph1.replace(/\n/g, '<br>') %></p> <h2><%= service.details.heading2 %></h2>
        <p><%- service.details.paragraph2.replace(/\n/g, '<br>') %></p>

        <% if (service.details.heading3 && service.details.paragraph3) { %>
            <h2><%= service.details.heading3 %></h2>
            <p><%- service.details.paragraph3.replace(/\n/g, '<br>') %></p>
        <% } %>
    </div>

    <div class="call-to-action">
        <p>Ready to enhance your security posture with our <%= service.name %> service? Contact us today!</p>
        <a href="/contact" class="button">Get a Consultation</a>
    </div>
</section>

<%- include('partials/footer') %>

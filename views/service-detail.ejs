<%- include('partials/header') %>

<div class="container page-content">
    <article class="service-details-content">
        <img src="<%= service.image %>" alt="<%= service.name %>" class="service-detail-image">
        <h2><%= service.details.heading1 %></h2>
        <p><%= service.details.paragraph1 %></p>
        <h2><%= service.details.heading2 %></h2>
        <p><%= service.details.paragraph2 %></p>
        <h2><%= service.details.heading3 %></h2>
        <p><%= service.details.paragraph3 %></p>
    </article>
    <nav class="service-navigation">
        <div class="nav-links">
            <% if (prevService) { %>
                <a href="/services/<%= prevService.id %>" class="prev-service">
                    <i class="fas fa-arrow-left"></i> Previous: <%= prevService.name %>
                </a>
            <% } else { %>
                <span></span>
            <% } %>
            <% if (nextService) { %>
                <a href="/services/<%= nextService.id %>" class="next-service">
                    Next: <%= nextService.name %> <i class="fas fa-arrow-right"></i>
                </a>
            <% } else { %>
                <span></span>
            <% } %>
        </div>
    </nav>
</div>

<%- include('partials/footer') %>
